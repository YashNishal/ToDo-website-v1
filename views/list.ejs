
<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% for(let i=0 ; i < newListItems.length ; i++) { %>
      <div class="item">
        <input type="checkbox">
        <p>
          <%= newListItems[i] %>
        </p>
      </div>
    <% } %>

    <form action="/" method="post" class="item">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button class="add-btn" type="submit" name="list" value=<%= listTitle %> >+</button>
    </form>

  </div>

</body>

<%- include("footer") -%>